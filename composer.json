{
    "name": "victorlap/laravel-approvable",
    "type": "library",
    "description": "Easily add an approval process to any laravel model",
    "keywords": [
        "victorlap",
        "laravel-approvable"
    ],
    "homepage": "https://github.com/victorlap/laravel-approvable",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Lap",
            "email": "victorlap@outlook.com",
            "homepage": "https://github.com/victorlap",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "orchestra/testbench": "~3.0",
        "orchestra/database": "~3.1",
        "phpunit/phpunit": "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Victorlap\\Approvable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Victorlap\\Approvable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
