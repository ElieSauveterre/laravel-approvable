{
    "name": "victorlap/laravel-approvable",
    "type": "library",
    "description": "Easily add an approval process to any laravel model",
    "keywords": [
        "victorlap",
        "laravel-approvable",
        "approvable"
    ],
    "homepage": "https://github.com/victorlap/laravel-approvable",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Lap",
            "email": "victorlap@outlook.com",
            "homepage": "https://github.com/victorlap",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/database": "5.7.*",
        "illuminate/support": "5.7.*",
        "webpatser/laravel-uuid": "^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "^3.6",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Victorlap\\Approvable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Victorlap\\Approvable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Victorlap\\Approvable\\ApprovableServiceProvider"
            ]
        }
    }
}
